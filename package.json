{
  "name": "react-starterify",
  "version": "1.0.3",
  "description": "React JS application skeleton using Browserify and other awesome tools",
  "author": "Maurizio Mangione",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Granze/react-starterify"
  },
  "keywords": [
    "react",
    "browserify",
    "seed",
    "boilerplate",
    "kickstarter",
    "ES6",
    "ES2015"
  ],
  "scripts": {
    "start": "npm run watch",
    "test": "mocha --reporter nyan --compilers js:babel/register --recursive",
    "clean": "rimraf dist/*",
    "browserify": "NODE_ENV=production browserify src/app.jsx -t babelify -d -p [minifyify --map app.js.map --output dist/app.js.map] > dist/app.js",
    "styles": "postcss -u postcss-mixins -u postcss-simple-extend -u postcss-nested -u postcss-simple-vars -u autoprefixer -o dist/main.css src/styles/main.css",
    "server": "browser-sync start --files \"dist/main.css,dist/app.js\" --server ./ --reload-delay 1000",
    "build": "npm run clean && parallelshell \"npm run styles\" \"npm run browserify\"",
    "watch": "npm run styles && npm run browserify && parallelshell \"npm run watchify\" \"npm run watch-css -s\" \"npm run watch-lint\" \"npm run server\"",
    "watchify": "watchify -t babelify src/app.jsx -o dist/app.js",
    "watch-css": "chokidar \"src/styles/\" -c \"npm run styles\" ",
    "watch-lint": "esw -w --ext .jsx src/",
    "copy-replace": "cp src/index.html dist/ && replace \"dist/\" \"\""
  },
  "bugs": {
    "url": "https://github.com/Granze/react-starterify/issues"
  },
  "homepage": "https://github.com/Granze/react-starterify",
  "dependencies": {
    "react": "^0.13.3"
  },
  "devDependencies": {
    "autoprefixer": "^5.2.0",
    "babel": "^5.8.21",
    "babel-eslint": "^4.0.5",
    "babelify": "^6.1.3",
    "browser-sync": "^2.8.2",
    "browserify": "^11.0.1",
    "chai": "^3.2.0",
    "chokidar-cli": "^1.0.1",
    "cssnano": "^2.2.0",
    "eslint": "^1.1.0",
    "eslint-watch": "^1.2.4",
    "minifyify": "^7.0.5",
    "mocha": "^2.2.5",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^1.5.0",
    "postcss-mixins": "^0.4.0",
    "postcss-nested": "^0.3.2",
    "postcss-simple-extend": "^0.3.2",
    "postcss-simple-vars": "^0.3.0",
    "react-tools": "^0.13.3",
    "replace": "^0.3.0",
    "rimraf": "^2.4.2",
    "watchify": "^3.3.1"
  }
}
