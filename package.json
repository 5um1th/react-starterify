{
  "name": "react-starterify",
  "version": "1.0.3",
  "description": "React JS application skeleton using Browserify and other awesome tools",
  "author": "Maurizio Mangione",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Granze/react-starterify"
  },
  "keywords": [
    "react",
    "browserify",
    "seed",
    "boilerplate",
    "kickstarter",
    "ES6",
    "ES2015"
  ],
  "scripts": {
    "start": "npm run watch",
    "test": "mocha --reporter nyan --compilers js:babel/register --recursive",
    "clean": "rimraf dist/*",
    "lint": "eslint src/*.jsx src/**/*.jsx",
    "browserify": "NODE_ENV=production browserify src/app.jsx -t babelify -d -p [minifyify --map app.js.map --output dist/app.js.map] > dist/app.js",
    "styles": "postcss -u postcss-mixins -u postcss-simple-extend -u postcss-nested -u postcss-simple-vars -u autoprefixer -o dist/main.css src/styles/main.css",
    "server": "browser-sync start --files \"dist/main.css,dist/app.js\" --server ./",
    "build": "npm run clean && parallelshell \"npm run styles\" \"npm run browserify\"",
    "watch": "parallelshell \"npm run watchify\" \"npm run watch-css -s\" \"npm run lint -s\" \"npm run server\"",
    "watchify": "watchify -v -t babelify src/app.jsx -o dist/app.js",
    "watch-css": "watch \"npm run styles\" src/styles/",
    "watch-lint": "watch \"npm run lint\" src/"
  },
  "bugs": {
    "url": "https://github.com/Granze/react-starterify/issues"
  },
  "homepage": "https://github.com/Granze/react-starterify",
  "dependencies": {
    "react": "^0.13.3"
  },
  "devDependencies": {
    "autoprefixer": "^5.2.0",
    "babel": "^5.6.5",
    "babel-eslint": "^3.1.18",
    "babelify": "^6.1.2",
    "browser-sync": "^2.7.12",
    "browserify": "^10.2.4",
    "chai": "^3.0.0",
    "cssnano": "^1.4.3",
    "eslint": "^0.23.0",
    "eslint-plugin-react": "^2.5.2",
    "minifyify": "^7.0.1",
    "mocha": "^2.2.5",
    "parallelshell": "^1.1.1",
    "postcss-cli": "^1.3.1",
    "postcss-mixins": "^0.3.0",
    "postcss-nested": "^0.3.2",
    "postcss-simple-extend": "^0.3.1",
    "postcss-simple-vars": "^0.3.0",
    "react-tools": "^0.13.3",
    "rimraf": "^2.4.0",
    "watch": "^0.16.0",
    "watchify": "^3.2.3"
  }
}
